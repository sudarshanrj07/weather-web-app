<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{{title}}</title>
		
		<link rel="stylesheet" href="/css/styles.css" />
	</head>
	<body>
		<div class="main-content">
			{{>header}}
			<article class="widget">
				<form class="weatherLocation">
					<input
						class="input-field"
						type="text"
						placeholder="Enter your location"
					/>
					<button class="search-button">Search</button><button class="location-button" onclick="getCityFromGeolocation()">Get Location</button>
				</form>
				<div class="icon-and-weatherInfo">
					<div class="weatherIcon">
						<i></i>
					</div>
					<div class="weatherInfo">
						<div class="temperature"><span></span></div>
						<div class="weatherCondition"></div>
					</div>
				</div>
				<div class="place"></div>
				<div class="date"></div>
			</article>
		</div>
		<script type="text/javascript" src="js/app.js"></script>
	</body>
</html>